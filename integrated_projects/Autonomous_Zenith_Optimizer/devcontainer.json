// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:1-9.0-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/powershell:1": {},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/dhoeric/features/act:1": {},
		"ghcr.io/stuartleeks/dev-container-features/add-host:1": {},
		"ghcr.io/flexwie/devcontainer-features/op:1": {},
		"ghcr.io/wxw-matt/devcontainer-features/command_runner:0": {},
		"ghcr.io/wxw-matt/devcontainer-features/script_runner:0": {},
		"ghcr.io/nikiforovall/devcontainer-features/dotnet-csharpier:1": {},
		"ghcr.io/juan-ayala/devcontainer-features/aem-sdk:1": {},
		"ghcr.io/juan-ayala/devcontainer-features/aem-universal-editor-service:1": {},
		"ghcr.io/devcontainers-extra/features/act:1": {},
		"ghcr.io/devcontainers-extra/features/act-asdf:2": {},
		"ghcr.io/devcontainers-extra/features/actionlint:1": {},
		"ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"BlackBoxLabs.blackbox-labs",
				"Blackboxapp.blackboxagent",
				"saoudrizwan.cline-nightly",
				"ms-dotnettools.vscode-dotnet-runtime",
				"ms-vscode.anycode-python",
				"TeamsDevApp.vscode-ai-foundry",
				"Kingleo.deepseek-web",
				"exodus-tola.deepseek-copilot",
				"BetaVersion.vscode-github-desktop",
				"GitHub.codespaces",
				"GitHub.copilot-chat",
				"GitHub.github-vscode-theme",
				"GitHub.remotehub",
				"github.vscode-github-actions",
				"Blackboxapp.blackbox",
				"eamodio.gitlens",
				"donjayamanne.python-extension-pack",
				"AkeemMcKenzie.python-package-manager-pro",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"Redis.redis-for-vscode",
				"cweijan.vscode-redis-client",
				"GitHub.vscode-pull-request-github",
				"ironmansoftware.powershell-universal"
			]
		}
	}
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5000, 5001],
	// "portsAttributes": {
	//		"5001": {
	//			"protocol": "https"
	//		}
	// }
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip install -r requirements.txt && python -m pytest tests/ -v"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}