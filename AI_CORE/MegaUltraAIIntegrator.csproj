<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Maximale KompatibilitÃ¤t und Leistung -->
  <!-- Upgrade: Entferne EOL net6.0, ersetze durch net8.0 fÃ¼r Langzeit-Support -->
  <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  <!-- Verhindert doppelte Assembly-Attribute -->
  <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  <!-- Falls doppelte TargetFrameworkAttribute entstehen, auch dieses deaktivieren -->
  <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <!-- Nur explizit aufgefÃ¼hrte Quellcodes kompilieren -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <!-- Build & Performance Optimierungen -->
    <Optimize>true</Optimize>
    <DebugType>portable</DebugType>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningLevel>5</WarningLevel>
    <TieredCompilation>true</TieredCompilation>
    <PublishReadyToRun>true</PublishReadyToRun>

    <!-- Security Hardening -->
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest-All</AnalysisLevel>
    <AnalysisMode>All</AnalysisMode>

  </PropertyGroup>

